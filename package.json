{
  "name": "@krobkrong/resources-utilities",
  "version": "0.1.11",
  "description": "A node utilities to generate typescript defition from svg, css, scss.",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/krobkrong/resources-utilities.git"
  },
  "keywords": [
    "typescript",
    "resources",
    "module",
    "svg",
    "css",
    "scss",
    "sass"
  ],
  "author": "veasna sreng",
  "license": "Apache-2.0",
  "private": false,
  "bin": {
    "resutil": "dist/cli/resutil.js"
  },
  "scripts": {
    "test": "yarn test:prepare && yarn test:exec",
    "test:exec": "jest --runInBand --colors --coverage --detectOpenHandles",
    "test:prepare": "yarn selenium && yarn build && yarn test:dependencies && ts-node utilties/mkmod.ts",
    "test:dependencies": "cd tests/webpack/browser/www && yarn install",
    "build": "yarn compile && yarn rework:dts && yarn rework:js && rollup -c rollup.config.ts",
    "compile": "tsc -b tsconfig.build.json",
    "rework:dts": "ts-node utilties/conv.ts -a resmod --ts -r dist/types",
    "rework:js": "ts-node utilties/conv.ts -a resmod --js -r build",
    "clean": "rm -rf build && rm -rf dist && rm -rf coverage",
    "pre-release": "standard-version",
    "release": "yarn publish --access public",
    "selenium": "ts-node utilties/selenium-util.ts -d tests/webpack/browser/drivers"
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "preset": "ts-jest",
    "moduleNameMapper": {
      "^@resmod/(.*)$": "<rootDir>/src/$1",
      "^@test-helper/(.*)$": "<rootDir>/tests/helpers/$1"
    }
  },
  "devDependencies": {
    "@types/enhanced-resolve": "^3.0.6",
    "@types/extract-zip": "^1.6.2",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.12",
    "@types/jsdom": "^12.2.4",
    "@types/memory-fs": "^0.3.2",
    "@types/node": "^11.13.2",
    "@types/node-sass": "^4.11.0",
    "@types/rimraf": "^2.0.2",
    "@types/selenium-webdriver": "^4.0.2",
    "@types/svgo": "^1.2.1",
    "@types/tcp-port-used": "^1.0.0",
    "@types/webpack": "^4.39.1",
    "@types/yaml": "^1.0.2",
    "@types/yargs": "^13.0.0",
    "babel-jest": "^24.7.1",
    "babel-preset-env": "^1.7.0",
    "enhanced-resolve": "^4.1.0",
    "extract-zip": "^1.6.7",
    "glob": "^7.1.3",
    "jest": "24.8.0",
    "jsdom": "^15.1.1",
    "memory-fs": "^0.4.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.10.1",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-executable": "^1.4.5",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript": "^1.0.1",
    "selenium-webdriver": "^4.0.0-alpha.5",
    "standard-version": "^5.0.2",
    "tar": "^4.4.8",
    "tcp-port-used": "^1.0.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.1.0",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.8.0",
    "tslib": "^1.9.3",
    "typescript": "^3.4.5",
    "yaml": "^1.5.0"
  },
  "dependencies": {
    "node-sass": "^4.12.0",
    "svgo": "^1.3.0",
    "webpack": "^4.39.3",
    "yargs": "^13.2.2"
  }
}
